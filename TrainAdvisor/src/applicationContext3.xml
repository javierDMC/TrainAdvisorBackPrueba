<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

<!-- Carga con archivo externo de las propiedades -->
<context:property-placeholder location="classpath:datosEmpresa.propiedades"/>


<!-- creacion de la dependencia -->
<bean id="miInforme" class="es.train.main.Informe"></bean>




<bean id="miEmpleado" class="es.train.main.DirectorEmpleado" 
	init-method="metodoIncial"
	destroy-method="metodoFinal">

	<constructor-arg ref="miInforme"></constructor-arg>
	

</bean>


</beans>